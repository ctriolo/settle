!!!
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/board.css')
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js", type="text/javascript")
    script(src="/javascripts/jquery.svg.js")
    script(src="/javascripts/jquery.svgdom.js")
    script(src="/socket.io/socket.io.js")
    script(src="/javascripts/board.js")
  body
    .container-fluid
      .row-fluid
        .span8
          .board-container
            | <svg viewBox="0 0 800 800" version="1.1">
            include includes/defs
            for hex in hexes
              | <g class="hex #{hex.type}" id="#{hex.index}">
              |   <polygon points="
              for p in hex.points
                #{p.x},#{p.y}
              |   "></polygon>
              if (hex.number)
                | <g class="numberToken number#{hex.number}">
                |   <circle cx="#{hex.center.x}" cy="#{hex.center.y}" r="#{hex.radius/2.4}"></circle>
                |   <text x="#{hex.center.x+1}" y="#{hex.center.y+10}">#{hex.number}</text>
                | </g>
              | </g>
            for edge in edges
              | <line class="path #{edge.port}" x1="#{edge.x0}" y1="#{edge.y0}" x2="#{edge.x1}" y2="#{edge.y1}" id="#{edge.index}"></line>
              if (edge.port != "None")
                | <circle class="port #{edge.port}" cx="#{(edge.x0 + edge.x1)/2}" cy="#{(edge.y0 + edge.y1)/2}" r="16"></circle><text class="port #{edge.port}" x="#{(edge.x0 + edge.x1)/2+1}" y="#{(edge.y0 + edge.y1)/2+5}">
                if (edge.port == "Any31")
                  |  3:1</text>
                else
                  | 2:1</text>
            for vertex in vertices
              | <circle class="intersection" id="#{vertex.index}" cx="#{vertex.x}" cy="#{vertex.y}" r="6"></circle>
            | </svg>
        .span4
          .info-container
            .player.well
              h2 Player 1
            .player.well
              h2 Player 2
            .player.well
              h2 Player 3
            .player.well
              h2 Player 4
            .well
              h2 Messages
              #messages
              form#messageForm
                input#messageInput(type="text")
