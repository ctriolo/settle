!!!
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/board.css')
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js", type="text/javascript")
    script(src="/javascripts/jquery.svg.js")
    script(src="/javascripts/jquery.svgdom.js")
    script(src="/javascripts/board.js")
  body
    | <svg viewBox="0 0 800 600" width="800" height="600" version="1.1">
    | <defs>
    |   <pattern id="forest" patternContent="objectBoundingBox" width="1" height="2" x="0" y="-100"spreadMethod = "repeat"">
    |     <image xlink:href="http://images.travelpod.com/users/michaelsavage/1.1242034500.birds-eye-view-into-the-canyon-below.jpg" x="0" y="0" width="500" height="366" />
    |   </pattern>
    | </defs>
    for hex in hexes
      | <polygon
      |   class="hex"
      |   fill="#{hex.color}",
      |   stroke="#{hex.stroke}",
      |   points="
      for p in hex.points
        #{p.x},#{p.y}
      |   ">
      | </polygon>
      if (hex.number)
        | <circle class="numberToken" cx="#{hex.center.x}" cy="#{hex.center.y}" r="25"></circle>
        | <text class="numberToken" x="#{hex.center.x}" y="#{hex.center.y+12}">
        |   #{hex.number}
        | </text>
    for edge in edges
      | <line class="path" x1="#{edge[0].x}" y1="#{edge[0].y}" x2="#{edge[1].x}" y2="#{edge[1].y}"></line>
    for vertex in vertices
      | <circle class="intersection" cx="#{vertex.x}" cy="#{vertex.y}" r="10"></circle>
    | </svg>
    div.player#bottomRight
    div.player#bottomLeft
    div.player#topRight
    div.player#topLeft
