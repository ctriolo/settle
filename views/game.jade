extends game-layout

block title
  title= 'Game ' + title + ' | Settle'

block head
  link(rel='stylesheet', href='/stylesheets/board.css')
  link(rel='stylesheet', href='/stylesheets/game.css')
  script(src="/javascripts/game.js")

block board
  a#start.btn.btn-primary.btn-large.disabled Waiting...
  #startBackground
  include includes/board

block player
  #player0.player.well
    h2.name Empty
    .cardwell
      .cards
        ul.resource-cards
      .roll
        <image src="http://www.clker.com/cliparts/6/4/1/6/12456404511653839274badaman_dice.svg.med.png" width="100%"/>
      .trade
        <image src="http://farm4.staticflickr.com/3609/3575000735_6ba08467d9.jpg" width="100%"/>
      .dev_cards
      .end
        <image src="http://www.fuzzimo.com/wp-content/uploads/2009/06/tutorial-StopSign-13.png" width="100%"/>
      .build
        <image src="http://static.ddmcdn.com/gif/hammer-1.jpg" width="100%"/>

block others
  #player1.player.well
    h2.name Empty
    .opponentcardwell
      .opponentcards
        ul.resource-cards
  #player2.player.well
    h2.name Empty
    .opponentcardwell
      .opponentcards
        ul.resource-cards
  #player3.player.well
    h2.name Empty
    .opponentcardwell
      .opponentcards
        ul.resource-cards

block messages
  .message.well
    h2 Messages
    #messages
    form#messageForm
      input#messageInput(type="text")

block extras
  #buildPopup
    a#popupClose x
    #settlement
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
      .buildResource.wood
      .buildResource.brick
      .buildResource.wheat
      .buildResource.sheep
    #city
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
      .buildResource.stone
      .buildResource.stone
      .buildResource.stone
      .buildResource.wheat
      .buildResource.wheat
    #road
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
      .buildResource.wood
      .buildResource.brick
    #ship
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
    #devcard
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
      .buildResource.stone
      .buildResource.wheat
      .buildResource.sheep
  #popupBackground
