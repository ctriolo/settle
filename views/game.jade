extends game-layout

block title
  title= 'Game ' + title + ' | Settle'

block head
  link(rel='stylesheet', href='/stylesheets/board.css')
  link(rel='stylesheet', href='/stylesheets/game.css')
  script(src="/javascripts/game.js")

block board
  a#start.btn.btn-primary.btn-large.disabled Waiting...
  #startBackground
  include includes/board

block player
  #player0.player.well
    h2.name Empty
    .cardwell
      .cards
        ul.resource-cards
    .actions
      .btn-group.roll-phase
        button.btn.roll Roll
        button.btn.development Development
      .btn-group.main-phase
        button.btn.build Build
        button.btn.trade Trade
        button.btn.development Development
        button.btn.end End

block others
  #player1.player.well
    h2.name Empty
    .opponentcardwell
      .opponentcards
        ul.resource-cards
  #player2.player.well
    h2.name Empty
    .opponentcardwell
      .opponentcards
        ul.resource-cards
  #player3.player.well
    h2.name Empty
    .opponentcardwell
      .opponentcards
        ul.resource-cards

block messages
  .message.well
    h2 Messages
    #messages
    form#messageForm
      input#messageInput(type="text")

block extras
  #buildPopup
    a#popupClose x
    #settlement
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
      .buildResource.wood
      .buildResource.brick
      .buildResource.wheat
      .buildResource.sheep
    #city
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
      .buildResource.stone
      .buildResource.stone
      .buildResource.stone
      .buildResource.wheat
      .buildResource.wheat
    #road
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
      .buildResource.wood
      .buildResource.brick
    #ship
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
    #development
      image(src="http://www.visitingdc.com/images/white-house-picture.jpg", width="100%", top="0")
      .buildResource.stone
      .buildResource.wheat
      .buildResource.sheep
  #popupBackground
