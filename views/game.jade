extends game-layout

block title
  title= 'Game ' + title + ' | Settle'

block head
  link(rel='stylesheet', href='/stylesheets/board.css')
  link(rel='stylesheet', href='/stylesheets/game.css')
  script(src="/javascripts/game.js")

block board
  a#start.btn.btn-primary.btn-large.disabled Waiting...
  #startBackground
  include includes/board

block trade
  .trade-popup
    .offer-cards
      .trade-text 
        p Offer:
      .cards.trade
        .trade-card
          .wheat-card
          .card-number.js-wheat-number 0
        .trade-card
          .wood-card
          .card-number.js-wood-number 0
        .trade-card
          .sheep-card
          .card-number.js-sheep-number 0
        .trade-card
          .brick-card
          .card-number.js-brick-number 0
         .trade-card
          .stone-card
          .card-number.js-stone-number 0
    .for-cards
      .trade-text For:
      .cards.trade
        .trade-card
          .wheat-card
          .card-number.js-wheat-number 0
        .trade-card
          .wood-card
          .card-number.js-wood-number 0
        .trade-card
          .sheep-card
          .card-number.js-sheep-number 0
        .trade-card
          .brick-card
          .card-number.js-brick-number 0
        .trade-card
